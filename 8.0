package com.example.servlets;

import java.io.*;
import java.sql.*;
import javax.servlet.*;
import javax.servlet.http.*;
import com.example.utils.DBUtil;

public class EmployeeServlet extends HttpServlet {
    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        String empidParam = request.getParameter("empid");
        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        try (Connection con = DBUtil.getConnection()) {
            Statement st;
            ResultSet rs;

            if (empidParam != null && !empidParam.isEmpty()) {
                int empid = Integer.parseInt(empidParam);
                String query = "SELECT * FROM Employee WHERE EmpID = " + empid;
                st = con.createStatement();
                rs = st.executeQuery(query);

                if (!rs.next()) {
                    out.println("<h3>No Employee Found!</h3>");
                } else {
                    out.println("<h2>Employee Details</h2>");
                    out.println("<table border='1'><tr><th>EmpID</th><th>Name</th><th>Salary</th></tr>");
                    out.println("<tr><td>" + rs.getInt("EmpID") + "</td><td>" +
                                rs.getString("Name") + "</td><td>" + rs.getDouble("Salary") + "</td></tr>");
                    out.println("</table>");
                }
            } else {
                st = con.createStatement();
                rs = st.executeQuery("SELECT * FROM Employee");

                out.println("<h2>All Employees</h2>");
                out.println("<table border='1'><tr><th>EmpID</th><th>Name</th><th>Salary</th></tr>");
                while (rs.next()) {
                    out.println("<tr><td>" + rs.getInt("EmpID") + "</td><td>" +
                                rs.getString("Name") + "</td><td>" + rs.getDouble("Salary") + "</td></tr>");
                }
                out.println("</table>");
            }

        } catch (Exception e) {
            e.printStackTrace(out);
        }
    }
}
